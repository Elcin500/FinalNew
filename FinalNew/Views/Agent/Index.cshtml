@model List<Agent>
@{
    ViewData["Title"] = "Index";
}


<section class="background-img" data-setbg="assets/img/details-background.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Agents Page</h1>
                <ul>
                    <li><a asp-controller="home" asp-action="index">Home</a></li>
                    @*<li><span class="slash"></span><a href="#"></a></li>*@
                    <li><span class="slash">/</span><span>Agents</span></li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="agents-main">
    <div class="container">
        <div class="title">
            <h2>Our Real Estate Agents</h2>
            <hr>
        </div>
        <div class="row">
            @foreach (var agent in Model)
            {
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="agent">
                        <div class="media-top">
                            <div class="media-img">
                                <a asp-controller="agent" asp-action="details" asp-route-id="@agent.Id"><img src="assets/img/@agent.ImagePath" alt="" width="100" height="100"></a>
                            </div>
                            <div class="media-body">
                                <a asp-controller="agent" asp-action="details" asp-route-id="@agent.Id"><h4>@agent.Name @agent.Surname</h4></a>
                                <p class="p-top">Listing Agent</p>
                                <p class="p-bottom"> <span>tel</span> <a href="#">@agent.Phone</a></p>
                            </div>
                        </div>
                        <p>
                            @if (agent.Description.Length > 100)
                            {
                                @agent.Description.Substring(0, 50)
                            }
                            else
                            {
                                @agent.Description
                            }
                        </p>

                    </div>
                </div>
            }
        </div>
    </div>
</section>

